{
  "name": "365scores-quiz",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": ["packages/*"],
    "catalog": {
      "typescript": "^5.9.3",
      "prettier": "^3.6.2",
      "@types/bun": "^1.3.1"
    }
  },
  "scripts": {
    "dev": "bun run -F '*' dev",
    "db:start": "docker compose --env-file ./packages/backend/.env.development -f docker-compose.yml up -d",
    "db:stop": "docker compose --env-file ./packages/backend/.env.development -f docker-compose.yml down",
    "db:destroy": "docker compose --env-file ./packages/backend/.env.development -f docker-compose.yml down -v",
    "dev:backend": "bun run -F '365scores-quiz-be' dev",
    "dev:frontend": "bun run -F '365scores-quiz-fe' dev",
    "build": "bun run -F '*' build",
    "build:backend": "bun run -F '365scores-quiz-be' build",
    "build:frontend": "bun run -F '365scores-quiz-fe' build"
  }
}
